## mod4 = Alt (left)
## super = Windows

## Lock Screen
#mod4 + l
#    i3lock -c 000000
super + l
    i3lockscreen

## Audiokeys
XF86AudioMute
    amixer sset Master toggle; refbar
XF86Audio{Raise,Lower}Volume
    amixer sset Master 3%{+,-}; refbar; mpv --volume=50 $HOME/downloads/aero15x/usr/share/sounds/ubuntu/stereo/message.ogg
